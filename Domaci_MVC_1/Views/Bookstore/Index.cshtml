@using Domaci_MVC_1.Models;
@using Domaci_MVC_1.ViewModels;
@using Domaci_MVC_1.Controllers;

@*@model IEnumerable<Book>*@
@model Domaci_MVC_1.ViewModels.BookGenreViewModel

@{
    ViewBag.Title = "Dodavanje knjiga";
}

<h2>Bookstore - Home page</h2>
@Html.ValidationSummary()
<form action="/Bookstore/AddBook" method="post">
    <table class="table-striped table-bordered">
        <tr>
            <th colspan="2" style="text-align: center">
                Add new book
            </th>
        </tr>
        <tr>
            <td>Name of book</td>
            <td>
                <input type="text" name="Book.Name"/>
            </td>
        </tr>
        <tr>
            <td>Price of book</td>
            <td>
                <input type="text" name="Book.Price"/>
            </td>
        </tr>
        <tr>
            <td>Genre of book</td>
            <td>
                
             @* treba odraditi DropdownList
    @Html.DropDownList("Genre")*@
              
                <select name="SelectedGenreId">
                    @foreach (var b in Model.Genres)
                    {
                        if (b.isDeleted == false)
                        {
                            <option value="@b.Id">@b.Name</option>
                        }
                    }
                </select>
            </td>
        </tr>
        <tr style="text-align: right">
            <td colspan="2">
                <input type="submit" value="Add" />
            </td>
        </tr>
    </table>
</form>
<div style="display: inline-block;">
    @Html.ActionLink("Show all books | ", "List", "Bookstore")
</div>
<div style="display: inline-block;">
    @Html.ActionLink("Show deleted books", "Deleted", "Bookstore")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
